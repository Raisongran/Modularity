<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raisongran.modularity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.raisongran.modularity.GameTouchOverlayView
            android:id="@+id/gestureOverlayView"
            android:layout_width="match_parent"
            android:layout_height="435dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/tView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Degrees: 0" />

        <TextView
            android:id="@+id/tStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Статус: не запущено" />

        <TextView
            android:id="@+id/tCords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="x = 0; y = 0; z = 0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <Button
                android:id="@+id/playLevelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="PlayButtonClick"
                android:text="Play Level" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="TestButtonClick"
                android:text="test" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="StopButtonClick"
                android:text="Stop" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
